token: "lip_iTvfKTP00IobUyQMc8FH"                  # Lichess OAuth2 Token
url: "https://lichess.org/"  # Lichess base URL

engine:                      # Engine settings
  dir: "./"               # DIR containing engines, relative to this project
  name: "stockfish"    # Binary name of the engine to use
  protocol: "uci"            # "uci" or "xboard"
  ponder: true               # Think on opponent time
  polyglot:
    enabled: true            # Activate polyglot book
    book:
      standard:              # List of book file paths for variant
        - "./cubail.bin"
#        - "./cevdet.bin"
#        - "./cubail.bin"
#        - "./cubail.bin"
#        - "./EchidnaX.bin"
      atomic:
        - "./atomic.bin"
      antichess:
        - "./antichess.bin"

        
    min_weight: 10           # Does not select moves with weight below min_weight (min 0, max: 65535)
    selection: "best_move"   # Move selection is one of "weighted_random", "uniform_random" or "best_move" (but not below the min_weight in 2. and 3. case)
    max_depth: 255           # Half move max depth
    Clear Hash: false         # Clear the hash table
              
  online_moves:
    chessdb_book:
      enabled: false
      min_time: 20
      move_quality: "best"     # One of "all", "good", "best"
      min_depth: 20            # Only for move_quality: "best"
      contribute: false
    lichess_cloud_analysis:
      enabled: true
      min_time: 6
      move_quality: "best"     # One of "good", "best"
      max_score_difference: 0 # Only for move_quality: "good". The maximum score difference (in cp) between the best move and the other moves.
      min_depth: 19
      min_knodes: 0
    online_egtb:
      enabled: true
      min_time: 5
      max_pieces: 7
      source: "lichess"        # One of "lichess", "chessdb"
      move_quality: "best"     # One of "good", "best"    
# engine_options:            # Any custom command line params to pass to the engine
#   cpuct: 3.1
  uci_options:               # Arbitrary UCI options passed to the engine
    Move Overhead: 200       # Increase if your bot flags games too often
    Threads: 7               # Max CPU threads the engine can use
    Hash: 128                # Max memory (in megabytes) the engine can allocate
    Use NNUE: true
    Debug Log File: "./debug/log123"
   
    
    
    
 
#    SyzygyPath: "./3-4-5"
    

  silence_stderr: false      # Some engines (yes you, leela) are very noisy

abort_time: 30               # Time to abort a game in seconds when there is no activity
fake_think_time: false       # Artificially slow down the bot to pretend like it's thinking
rate_limiting_delay: 0       # Time (in ms) to delay after sending a move to prevent "Too Many Requests" errors
move_overhead: 155          # Increase if your bot flags games too often

correspondence:
    move_time: 60            # Time in seconds to search in correspondence games.
    checkin_period: 600      # How often to check for opponent moves in correspondence games after disconnecting.
    disconnect_time: 300     # Time before disconnecting from a correspondence game.
    ponder: false            # Ponder in correspondence games the bot is connected to.              

challenge:                   # Incoming challenges
  concurrency: 1             # Number of games to play simultaneously
  sort_by: "best"            # Possible values: "best", "first"
  accept_bot: true           # Accepts challenges coming from other bots
  only_bot: false            # Accept challenges by bots only
  max_increment: 15          # Maximum amount of increment to accept a challenge. the max is 180. set to 0 for no increment
  min_increment: 0           # Minimum amount of increment to accept a challenge
  max_base: 900        # Maximum amount of base time to accept a challenge. the max is 315360000 (10 years)
  min_base: 0                # Minimum amount of base time to accept a challenge
  variants:                  # Chess variants to accept (http://lichess.org/variant)
    - standard
    - fromPosition
#    - antichess
#   - atomic
    - chess960
#    - crazyhouse
#    - horde
#    - kingOfTheHill
#   - racingKings
#   - threeCheck
  time_controls:             # Time controls to accept
    - bullet
    - blitz
    - rapid
#    - classical
#   - correspondence
  modes:                     # Game modes to accept
    - casual                 # Unrated games
    - rated                  # Rated games - must comment if the engine doesn't try to win

greeting:
    # Optional substitution keywords (include curly braces):
    #   {opponent} to insert opponent's name
    #   {me} to insert bot's name
    # Any other words in curly braces will be removed.
    hello: "Hi! I am Karpov_bot - Best Bot from Azerbaijan. Good Luck!"
    goodbye: "Good game!" # Message to send to chat at the end of a game
